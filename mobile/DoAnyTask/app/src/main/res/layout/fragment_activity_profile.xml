<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityProfileFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/profile" />


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        card_view:cardBackgroundColor="#DFE0E4"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="659dp">

            <TextView
                android:id="@+id/txt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="105dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="530dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="1dp"
                android:paddingBottom="10dp"
                android:text="Nombres"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_secondna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="158dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="477dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="1dp"
                android:paddingBottom="10dp"
                android:text="Apellidos"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_nameuser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="212dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="423dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="1dp"
                android:paddingBottom="10dp"
                android:text="Nombre de usuario"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_datebirth"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="266dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="369dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="1dp"
                android:paddingBottom="10dp"
                android:text="Fecha de nacimiento"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="328dp"
                android:layout_marginEnd="50dp"
                android:layout_marginBottom="307dp"
                android:paddingStart="18dp"
                android:paddingTop="3dp"
                android:paddingEnd="1dp"
                android:paddingBottom="10dp"
                android:text="Correo Electronico"
                android:textColor="@color/black"
                android:textSize="10dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="41dp"
                android:layout_marginTop="128dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="502dp"
                android:background="@drawable/ovalo"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/user_secondna"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="181dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="449dp"
                android:background="@drawable/ovalo"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:textSize="16dp" />

            <EditText
                android:id="@+id/user_profilename"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginTop="232dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="398dp"
                android:background="@drawable/ovalo"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:textSize="16dp" />


            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="38dp"
                android:layout_marginTop="291dp"
                android:layout_marginEnd="42dp"
                android:layout_marginBottom="333dp"
                android:background="@color/white"
                android:backgroundTint="#FFFFFF"
                android:clickable="false"
                android:focusable="false"
                android:hint="Seleccionar fecha"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="89dp"
                android:layout_height="103dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="137dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="135dp"
                card_view:srcCompat="@drawable/avatar1" />

            <ImageButton
                android:id="@+id/addProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="178dp"
                android:layout_marginTop="76dp"
                android:layout_marginEnd="136dp"
                android:layout_marginBottom="540dp"
                android:backgroundTint="#00FFFFFF"
                card_view:srcCompat="@drawable/add" />

            <EditText
                android:id="@+id/user_email"
                android:layout_width="276dp"
                android:layout_height="34dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="271dp"
                android:background="@drawable/ovalo"
                android:backgroundTint="@color/white"
                android:drawablePadding="5dp"
                android:textSize="16dp" />

            <androidx.cardview.widget.CardView
                android:id="@+id/view_note"
                android:layout_width="83dp"
                android:layout_height="81dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="42dp"
                android:layout_marginTop="399dp"
                android:layout_marginEnd="236dp"
                android:layout_marginBottom="179dp"
                android:backgroundTint="@color/white"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/number_note"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/black"
                    android:text="Notas"
                    android:textAlignment="center"
                    android:textColor="@color/white">

                </TextView>

                <EditText
                    android:id="@+id/text_notes"
                    android:layout_width="84dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="3"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_redordator"
                android:layout_width="95dp"
                android:layout_height="82dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="135dp"
                android:layout_marginTop="399dp"
                android:layout_marginEnd="131dp"
                android:layout_marginBottom="178dp"
                android:backgroundTint="@color/white"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/txt_reco"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/black"
                    android:text="Recordatorios"
                    android:textAlignment="center"
                    android:textColor="@color/white"></TextView>

                <EditText
                    android:id="@+id/numer_recorda"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="3"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textAlignment="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/view_even"
                android:layout_width="85dp"
                android:layout_height="80dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="237dp"
                android:layout_marginTop="402dp"
                android:layout_marginEnd="39dp"
                android:layout_marginBottom="177dp"
                android:backgroundTint="@color/white"
                card_view:cardCornerRadius="10dp">

                <TextView
                    android:id="@+id/txt_event"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/black"
                    android:text="Eventos"
                    android:textAlignment="center"
                    android:textColor="@color/white"></TextView>

                <EditText
                    android:id="@+id/number_event"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="3"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textAlignment="center" />

            </androidx.cardview.widget.CardView>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/action_add"
                android:layout_width="54dp"
                android:layout_height="54dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|end"
                android:layout_marginStart="270dp"
                android:layout_marginTop="489dp"
                android:layout_marginEnd="37dp"
                android:layout_marginBottom="116dp"
                app:backgroundTint="#0064FE"
                app:srcCompat="@android:drawable/ic_menu_edit"
                app:tint="@color/white"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</FrameLayout>