<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityAddTaskFragment">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            app:cardBackgroundColor="#DFE0E4"
            app:cardCornerRadius="20dp"
            app:cardElevation="6dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="659dp">

                <TextView
                    android:id="@+id/txt_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="68dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="567dp"
                    android:paddingStart="18dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="Nombre de tarea"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="305dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="330dp"
                    android:paddingStart="18dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="Notas"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="95dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="535dp"
                    android:background="@drawable/ovalo"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="5dp"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_secondna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="187dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="448dp"
                    android:paddingStart="18dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="Hora"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/user_secondna"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="211dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="419dp"
                    android:background="@drawable/ovalo"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="5dp"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/user_profilename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="265dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="365dp"
                    android:background="@drawable/ovalo"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="5dp"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_nameuser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="243dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="392dp"
                    android:paddingStart="18dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="Agregar Notas"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="149dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="475dp"
                    android:background="@color/white"
                    android:backgroundTint="#FFFFFF"
                    android:clickable="false"
                    android:focusable="false"
                    android:hint="Seleccionar fecha"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_datebirth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="124dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="511dp"
                    android:paddingStart="18dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="1dp"
                    android:paddingBottom="10dp"
                    android:text="Fecha"
                    android:textColor="@color/black"
                    android:textSize="10dp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/note1"
                    android:layout_width="276dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="294dp"
                    android:background="@drawable/ovalo"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="5dp"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/note2"
                    android:layout_width="276dp"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="37dp"
                    android:layout_marginEnd="43dp"
                    android:layout_marginBottom="250dp"
                    android:background="@drawable/ovalo"
                    android:backgroundTint="@color/white"
                    android:drawablePadding="5dp"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btn_crear_tarea"
                    android:layout_width="278dp"
                    android:layout_height="41dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="38dp"
                    android:layout_marginTop="465dp"
                    android:layout_marginEnd="42dp"
                    android:layout_marginBottom="153dp"
                    android:backgroundTint="@color/blue_800"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:text="Agregar"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


</FrameLayout>