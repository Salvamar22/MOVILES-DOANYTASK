<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationEventFragment">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="25dp"
        card_view:cardBackgroundColor="#DFE0E4"
        card_view:cardCornerRadius="20dp"
        card_view:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="659dp">

            <TextView
                android:id="@+id/text_gallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Titulo del evento"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/reTitle"
                android:layout_width="298dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_gallery"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="38dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <EditText
                    android:id="@+id/EditTittle"
                    android:layout_width="283dp"
                    android:layout_height="33dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="3dp"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="Ingrese el Titulo"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reTitle"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Ubicación"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/reUbi"
                android:layout_width="294dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title2"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="38dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <EditText
                    android:id="@+id/EditNameUbi"
                    android:layout_width="279dp"
                    android:layout_height="29dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="Ingrese la ubicación"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/reUbi"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Descripción"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/rename"
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/title3"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="37dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <EditText
                    android:id="@+id/EditName"
                    android:layout_width="270dp"
                    android:layout_height="32dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/ovalo"
                    android:ems="10"
                    android:hint="Ingrese la Descripción"
                    android:inputType="textPersonName"
                    android:textSize="12dp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rename"
                android:layout_alignParentStart="true"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Hora"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/time"
                android:layout_width="290dp"
                android:layout_height="35dp"
                android:layout_below="@+id/title4"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="37dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <EditText
                    android:id="@+id/editTextTime"
                    android:layout_width="201dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="70dp"
                    android:layout_marginBottom="1dp"
                    android:ems="10"
                    android:inputType="time"
                    android:background="@drawable/ovalo"
                    android:textSize="12dp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/title5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/time"
                android:layout_alignParentStart="true"
                android:layout_marginStart="37dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Fecha"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="296dp"
                android:layout_height="40dp"
                android:layout_below="@+id/title5"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="38dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <EditText
                    android:id="@+id/editTextDate"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="false"
                    android:hint="fecha de evento"
                    android:inputType="date"
                    android:maxLines="1"
                    android:background="@drawable/ovalo"
                    android:textSize="12dp" />

                <ImageButton
                    android:id="@+id/btn"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="239dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/calendar_month" />

            </RelativeLayout>

            <TextView
                android:id="@+id/title6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date"
                android:layout_alignParentStart="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="-28dp"
                android:text="Colaboración"
                android:textColor="#94262626" />

            <RelativeLayout
                android:id="@+id/colabo"
                android:layout_width="296dp"
                android:layout_height="39dp"
                android:layout_below="@+id/title6"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:background="#FFFFFF"
                card_view:cardCornerRadius="10dp"
                card_view:cardElevation="6dp"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintCircleRadius="10dp"
                card_view:layout_constraintEnd_toEndOf="parent"
                card_view:layout_constraintHorizontal_bias="0.0"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintVertical_bias="0.49">

                <ImageButton
                    android:id="@+id/btnForm"
                    android:layout_width="wrap_content"
                    android:layout_height="34dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="239dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/white"
                    android:onClick="dialogcollaborators"
                    android:src="@drawable/group" />

            </RelativeLayout>

            <Switch
                android:id="@+id/switch1"
                android:layout_width="137dp"
                android:layout_height="27dp"
                android:layout_above="@+id/button_prev"
                android:layout_below="@+id/colabo"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="34dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="190dp"
                android:layout_marginBottom="9dp"
                android:text=" Todo el día" />

            <Button
                android:id="@+id/button_prev"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="29dp"
                android:layout_marginBottom="115dp"
                android:background="@drawable/buttons_principal"
                android:text="Agregar"
                android:textSize="10dp"
                tools:layout_editor_absoluteX="154dp"
                tools:layout_editor_absoluteY="649dp" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</FrameLayout>